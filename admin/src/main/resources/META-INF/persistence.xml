<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ptc" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>ptc</jta-data-source>
    <class>com.peusoft.ptc.model.Config</class>
    <class>com.peusoft.ptc.model.ContactPerson</class>
    <class>com.peusoft.ptc.model.Contract</class>
    <class>com.peusoft.ptc.model.Customer</class>
    <class>com.peusoft.ptc.model.CustomerContact</class>
    <class>com.peusoft.ptc.model.Project</class>
    <class>com.peusoft.ptc.model.ProjectActivity</class>
    <class>com.peusoft.ptc.model.ProjectState</class>
    <class>com.peusoft.ptc.model.User</class>
    <class>com.peusoft.ptc.model.UserProjectActivity</class>
    <class>com.peusoft.ptc.model.UserProjectActivityPrice</class>
    <class>com.peusoft.ptc.model.Vat</class>
    <class>com.peusoft.ptc.model.Versioninfo</class>
    <class>com.peusoft.ptc.model.WorkDay</class>
    <class>com.peusoft.ptc.model.WorkDayTimeRecord</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
